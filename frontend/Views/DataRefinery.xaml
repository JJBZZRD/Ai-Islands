<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="frontend.Views.DataRefinery"
             Title="Data Refinery"
             BackgroundColor="#F2F2F2">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label Text="Data Refinery" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="Black"/>
            <Label Text="Refine and preprocess your data for RAG" 
                   FontSize="17" 
                   TextColor="Black"/>

            <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,0,0,10">
                <Entry x:Name="FilePathEntry" Placeholder="Selected file path" IsReadOnly="True" />
                <Button Grid.Column="1" Text="Find Dataset" Clicked="OnFindDatasetClicked" Margin="5,0,0,0">
                    <Button.ImageSource>
                        <FontImageSource Glyph="&#xf002;" FontFamily="FontAwesomeSolid" />
                    </Button.ImageSource>
                </Button>
                <Button Grid.Column="2" Text="Upload to AI Islands" Clicked="OnUploadToAIIslandsClicked" Margin="5,0,0,0" />
            </Grid>

            <BoxView HeightRequest="1" 
                     Color="Gray" 
                     Margin="0,10"/>

            <Grid ColumnDefinitions="*,*,Auto" RowDefinitions="Auto,Auto">
                <Picker Title="Select a dataset"
                        TextColor="Black"
                        Grid.ColumnSpan="2">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Dataset1</x:String>
                            <x:String>Dataset2</x:String>
                            <x:String>Dataset3</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
                <Picker Title="Select Embedding Model"
                        TextColor="Black"
                        Grid.Row="1"
                        Grid.ColumnSpan="2">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Sentence Transformer</x:String>
                            <x:String>Watson Embedder</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
                <Button Text="Process" 
                        Grid.Column="2"
                        Grid.RowSpan="2"
                        VerticalOptions="Center"
                        WidthRequest="100"
                        HeightRequest="50"
                        BackgroundColor="#007AFF"
                        TextColor="White"/>
            </Grid>

            <Frame BorderColor="Gray" 
                   CornerRadius="5" 
                   Padding="10">
                <VerticalStackLayout>
                    <Label Text="Dataset Preview" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="Black"/>
                    <Editor IsReadOnly="True" 
                            HeightRequest="300" 
                            Text="Preview of the selected dataset will appear here."
                            TextColor="Black"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>