<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="frontend.Views.DataRefinery"
             Title="Data Refinery"
             BackgroundColor="#F2F2F2">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Grid ColumnDefinitions="*,Auto">
                <VerticalStackLayout Grid.Column="0">
                    <Label Text="Data Refinery" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="Black"/>
                    <Label Text="Refine and preprocess your data for RAG" 
                           FontSize="17" 
                           TextColor="Black"/>
                </VerticalStackLayout>
                <Button Grid.Column="1" 
                        Text="Find Dataset" 
                        Clicked="OnFindDatasetClicked"
                        VerticalOptions="Center">
                    <Button.ImageSource>
                        <FontImageSource Glyph="&#xf002;" FontFamily="FontAwesomeSolid" />
                    </Button.ImageSource>
                </Button>
            </Grid>

            <Grid ColumnDefinitions="*,Auto">
                <Entry x:Name="FilePathEntry" Placeholder="Selected file path" IsReadOnly="True" Grid.Column="0" />
                <Button Text="Upload to AI Islands" 
                        Clicked="OnUploadToAIIslandsClicked" 
                        Grid.Column="1"
                        WidthRequest="150"
                        Margin="10,0,0,0" />
            </Grid>

            <BoxView HeightRequest="1" 
                     Color="Gray" 
                     Margin="0,10"/>

            <Grid ColumnDefinitions="Auto,*,Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="10" ColumnSpacing="10">
                <Label Text="Select AI Island dataset:" VerticalOptions="Center" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4"/>
                <Picker x:Name="DatasetPicker"
                        Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="3"
                        HorizontalOptions="Fill"
                        SelectedIndexChanged="OnDatasetPickerSelectedIndexChanged"/>
                        
                <Label Text="Default Processed:" Grid.Column="0" Grid.Row="1"/>
                <Label x:Name="DefaultProcessedLabel" Grid.Column="1" Grid.Row="1"/>
                
                <Label Text="Chunked Processed:" Grid.Column="2" Grid.Row="1"/>
                <Label x:Name="ChunkedProcessedLabel" Grid.Column="3" Grid.Row="1"/>
                
                <Label Text="Select Embedding Type:" VerticalOptions="Center" Grid.Column="0" Grid.Row="2"/>
                <Picker x:Name="EmbeddingTypePicker"
                        Grid.Column="1" Grid.Row="2"
                        HorizontalOptions="Fill"
                        SelectedIndexChanged="OnEmbeddingTypePickerSelectedIndexChanged"/>
                
                <Label Text="Select Embedding Model:" VerticalOptions="Center" Grid.Column="2" Grid.Row="2"/>
                <Picker x:Name="ModelPicker"
                        Grid.Column="3" Grid.Row="2"
                        HorizontalOptions="Fill"
                        SelectedIndexChanged="OnModelPickerSelectedIndexChanged"/>
                
                <StackLayout Orientation="Horizontal" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="3">
                    <Button x:Name="ProcessButton"
                            Text="Process" 
                            WidthRequest="100"
                            HeightRequest="50"
                            BackgroundColor="Red"
                            TextColor="White"
                            Clicked="OnProcessClicked"/>
                    <Button Text="Clear"
                            WidthRequest="100"
                            HeightRequest="50"
                            Margin="10,0,0,0"
                            Clicked="OnClearClicked"/>
                </StackLayout>
            </Grid>

            <Frame BorderColor="Gray" 
                   CornerRadius="5" 
                   Padding="10">
                <VerticalStackLayout>
                    <Label Text="Dataset Preview" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="Black"/>
                    <Editor x:Name="DatasetPreviewEditor"
                            IsReadOnly="True" 
                            HeightRequest="300" 
                            TextColor="Black"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>