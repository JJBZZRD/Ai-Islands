<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="frontend.Views.Inference"
             xmlns:local="clr-namespace:frontend.Views"
             BackgroundColor="{AppThemeBinding Light=#F2F2F2, Dark=#303134}">
    <Grid HorizontalOptions="FillAndExpand"
          VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>




        <!-- INPUT FRAME -->

        <Frame Grid.Row="0"
               Grid.Column="0"
               Padding="20"
               CornerRadius="10"
               Margin="10"
               IsVisible="{Binding IsInputFrameVisible}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" HeightRequest="70">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Text="Input"
                           FontSize="18"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                    <Button Grid.Column="1"
                            Text="Submit"
                            Clicked="OnRunInferenceClicked"
                            BackgroundColor="{AppThemeBinding Light=#3366FF, Dark=#3366FF}"
                            TextColor="White"
                            CornerRadius="5"
                            Padding="10"
                            HorizontalOptions="End"
                            VerticalOptions="Center"/>
                </Grid>

                <VerticalStackLayout Grid.Row="1"
                                     x:Name="InputContainer"
                                     Spacing="0"
                                     Margin="0,10,0,0">
                    <!-- Input controls will be added here programmatically -->
                </VerticalStackLayout>


                <VerticalStackLayout Grid.Row="1"
                                     IsVisible="{Binding IsRerankerInputVisible}">
                    <!-- Query Input -->
                    <Label Text="Query"
                           FontSize="16"
                           FontAttributes="Bold"/>
                    <Label Text="Enter your query below:"
                           FontSize="12"
                           TextColor="Gray"/>
                    <Entry Placeholder="Type your query here..."
                           Text="{Binding RerankerQuery}"/>

                    <!-- Passages Input -->
                    <Label Text="Passages"
                           FontSize="16"
                           FontAttributes="Bold"
                           Margin="0,20,0,0"/>
                    <Label Text="Enter passages below:"
                           FontSize="12"
                           TextColor="Gray"/>
                    <CollectionView ItemsSource="{Binding RerankerPassages}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnSpacing="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Editor Grid.Column="0"
                                            Text="{Binding Content}"
                                            Placeholder="Type passage here..."
                                            AutoSize="TextChanges"/>
                                    <Button Grid.Column="1" Text="Remove" Command="{Binding Source={RelativeSource AncestorType={x:Type ContentView}}, Path=BindingContext.RemovePassageCommand}" CommandParameter="{Binding .}" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <Button Text="Add Passage"
                            Command="{Binding AddPassageCommand}"/>
                </VerticalStackLayout>

                <!-- Preview Image/Video -->
                <Frame Grid.Row="2"
                       Padding="10"
                       Margin="0,10,0,0"
                       BackgroundColor="{AppThemeBinding Light=#F2F2F2, Dark=Black}"
                       BorderColor="{AppThemeBinding Light=#CCCCCC, Dark=#444444}"
                       CornerRadius="5"
                       IsVisible="{Binding IsPreviewImageVisible}">
                    <Image x:Name="PreviewImage"
                           Aspect="AspectFit"
                           IsVisible="{Binding IsPreviewImageVisible}"/>
                </Frame>
                <Frame Grid.Row="2"
                       Padding="10"
                       Margin="0,10,0,0"
                       BackgroundColor="{AppThemeBinding Light=#F2F2F2, Dark=Black}"
                       BorderColor="{AppThemeBinding Light=#CCCCCC, Dark=#444444}"
                       CornerRadius="5"
                       IsVisible="{Binding IsPreviewVideoVisible}">
                    <toolkit:MediaElement x:Name="PreviewVideo"
                                          Aspect="AspectFit"
                                          IsVisible="{Binding IsPreviewVideoVisible}"/>
                </Frame>
            </Grid>
        </Frame>




        <!-- OUTPUT FRAME -->
        <Frame Grid.Row="0"
               Grid.Column="1"
               Padding="20"
               CornerRadius="10"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"
               Margin="10"
               IsVisible="{Binding IsPrimaryOutputVisible}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" HeightRequest="70">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                           Text="Output"
                           FontSize="18"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>

                    <Button x:Name="CopyOutputButton"
                            Grid.Column="2"
                            Clicked="OnCopyOutputClicked"
                            VerticalOptions="Center"
                            Margin="0,0,10,0"
                            BackgroundColor="Transparent"
                            HeightRequest="20"
                            WidthRequest="20">
                        <Button.ImageSource>
                            <AppThemeBinding Light="copy_icon_black.png" Dark="copy_icon_white.png"/>
                        </Button.ImageSource>
                    </Button>

                    <StackLayout Grid.Column="3"
                                 Orientation="Horizontal"
                                 HorizontalOptions="End"
                                 VerticalOptions="Center">
                        <Label Text="JSON View"
                               VerticalOptions="Center"
                               Margin="0,0,5,0"/>
                        <Switch x:Name="PrimaryOutputToggle"
                                IsToggled="{Binding IsSecondaryOutputVisible, Mode=TwoWay}"
                                Toggled="OnPrimaryOutputToggleChanged"
                                VerticalOptions="Center"/>
                    </StackLayout>
                </Grid>

                <Frame Grid.Row="1"
                       Margin="0,10,0,0"
                       Padding="10"
                       BackgroundColor="{AppThemeBinding Light=#F2F2F2, Dark=Black}"
                       BorderColor="{AppThemeBinding Light=#CCCCCC, Dark=#444444}"
                       CornerRadius="5">
                    <ScrollView>
                        <Grid>
                            <Editor x:Name="OutputEditor"
                                    Text="{Binding OutputText}"
                                    IsReadOnly="True"
                                    IsTextPredictionEnabled="False"
                                    IsSpellCheckEnabled="False"
                                    IsVisible="{Binding IsOutputTextVisible}"
                                    BackgroundColor="Transparent"
                                    AutoSize="TextChanges"/>
                            <Image Source="{Binding ProcessedImageSource}"
                                   Aspect="AspectFit"
                                   IsVisible="{Binding IsProcessedImageVisible}"/>
                        </Grid>
                    </ScrollView>
                </Frame>
            </Grid>
        </Frame>


        <!-- JSON OUTPUT FRAME -->
        <Frame Grid.Row="0"
               Grid.Column="1"
               Padding="20"
               CornerRadius="10"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"
               Margin="10"
               IsVisible="{Binding IsSecondaryOutputVisible}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" HeightRequest="70">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                           Text="JSON Output"
                           FontSize="18"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>

                    <Button x:Name="CopyJsonOutputButton"
                            Grid.Column="2"
                            Clicked="OnCopyJsonOutputClicked"
                            VerticalOptions="Center"
                            Margin="0,0,10,0"
                            BackgroundColor="Transparent"
                            HeightRequest="20"
                            WidthRequest="20">
                        <Button.ImageSource>
                            <AppThemeBinding Light="copy_icon_black.png" Dark="copy_icon_white.png"/>
                        </Button.ImageSource>
                    </Button>

                    <StackLayout Grid.Column="3"
                                 Orientation="Horizontal"
                                 HorizontalOptions="End"
                                 VerticalOptions="Center">
                        <Label Text="JSON View"
                               VerticalOptions="Center"
                               Margin="0,0,5,0"/>
                        <Switch x:Name="SecondaryOutputToggle"
                                IsToggled="{Binding IsSecondaryOutputVisible, Mode=TwoWay}"
                                Toggled="OnSecondaryOutputToggleChanged"
                                VerticalOptions="Center"/>
                    </StackLayout>
                </Grid>

                <Frame Grid.Row="1"
                       Margin="0,10,0,0"
                       Padding="10"
                       BackgroundColor="{AppThemeBinding Light=#F2F2F2, Dark=Black}"
                       BorderColor="{AppThemeBinding Light=#CCCCCC, Dark=#444444}"
                       CornerRadius="5">
                    <ScrollView>
                        <Editor x:Name="JsonOutputEditor"
                                Text="{Binding JsonOutputText}"
                                IsReadOnly="True"
                                IsTextPredictionEnabled="False"
                                IsSpellCheckEnabled="False"
                                BackgroundColor="Transparent"
                                TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                    </ScrollView>
                </Frame>
            </Grid>
        </Frame>

        <!-- AUDIO OUTPUT FRAME (unchanged) -->
        <Frame Grid.Row="0"
               Grid.Column="1"
               Padding="20"
               CornerRadius="10"
               Margin="10"
               IsVisible="{Binding IsAudioPlayerVisible}">
            <StackLayout>
                <Label Text="Audio Output"
                       FontSize="18"
                       FontAttributes="Bold"
                       Margin="0,0,0,10"/>
                <toolkit:MediaElement x:Name="AudioPlayer"
                                      Source="{Binding AudioSource}"
                                      ShouldShowPlaybackControls="True"/>
            </StackLayout>
        </Frame>










        <!-- CHAT BOT FRAME -->

        <!-- This frame is for LLM's only - Online and Offline -->

        <Frame Grid.Row="0"
               Grid.Column="0"
               Grid.ColumnSpan="2"
               Padding="20"
               CornerRadius="10"
               Margin="10"
               IsVisible="{Binding IsChatbotVisible}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0"
                       Text="Chat Bot"
                       FontSize="18"
                       FontAttributes="Bold"
                       Margin="0,0,0,10"/>

                <ScrollView Grid.Row="1">
                    <ListView x:Name="ChatHistoryListView"
                              ItemsSource="{Binding ChatHistory}"
                              HasUnevenRows="True"
                              SeparatorVisibility="None"
                              SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Frame CornerRadius="10"
                                           Padding="10"
                                           Margin="5">
                                        <Frame.Triggers>
                                            <DataTrigger TargetType="Frame"
                                                         Binding="{Binding Role}"
                                                         Value="user">
                                                <Setter Property="BackgroundColor"
                                                        Value="{AppThemeBinding Light=#E1F5FE, Dark=#404040}"/>
                                            </DataTrigger>
                                            <DataTrigger TargetType="Frame"
                                                         Binding="{Binding Role}"
                                                         Value="assistant">
                                                <Setter Property="BackgroundColor"
                                                        Value="{AppThemeBinding Light=#F1F8E9, Dark=Black}"/>
                                            </DataTrigger>
                                        </Frame.Triggers>
                                        <Label TextType="Html"
                                               Text="{Binding FormattedContent}"
                                               LineBreakMode="WordWrap"/>
                                    </Frame>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollView>

                <StackLayout Grid.Row="2"
                             Orientation="Horizontal"
                             Margin="0,10,0,0">
                    <Entry x:Name="ChatInputEntry"
                           Placeholder="Type your message..."
                           HorizontalOptions="FillAndExpand"/>
                    <Button Text="Send"
                            Clicked="OnSendMessageClicked"
                            BackgroundColor="#3366FF"
                            TextColor="White"
                            CornerRadius="5"
                            Padding="15,10"/>
                </StackLayout>
            </Grid>
        </Frame>

        <local:ImagePopupView x:Name="_imagePopupView"
                              IsVisible="False"
                              Grid.RowSpan="1"
                              Grid.ColumnSpan="2"/>
    </Grid>
</ContentView>