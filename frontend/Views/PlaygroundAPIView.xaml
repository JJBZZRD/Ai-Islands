<?xml version="1.0" encoding="utf-8" ?>
<ContentView
xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="frontend.Views.PlaygroundAPIView"
             BackgroundColor="#F2F2F2">
    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Text="Chain API Access" 
               TextColor="Black"
               FontSize="24" 
               FontAttributes="Bold" 
               Margin="0,0,0,20"
               Grid.Row="0"/>

        <Frame Grid.Row="1" 
               BackgroundColor="White" 
               CornerRadius="10" 
               HasShadow="False" 
               BorderColor="#E0E0E0"
               Padding="20"
               VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand">

        </Frame>
    </Grid>
</ContentView>