<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="frontend.Views.FineTune"
             BackgroundColor="#F2F2F2">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label Text="Fine-tune Models" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="#333333"/>

            <ContentView x:Name="TaskSpecificContent" />

            <Button Text="Start Fine-Tuning" 
                    BackgroundColor="#3366FF"
                    TextColor="White"
                    CornerRadius="5"
                    HeightRequest="50"
                    FontAttributes="Bold"
                    IsVisible="{Binding IsFineTuningAvailable}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>