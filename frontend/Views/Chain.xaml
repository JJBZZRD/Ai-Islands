<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="frontend.Views.Chain"
             Title="Chain"
             BackgroundColor="#F2F2F2">
    <Grid Padding="20" RowSpacing="20" ColumnSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Run Chain Button -->
        <Button Grid.Row="0" 
        Grid.Column="1" 
        HorizontalOptions="End"
        BackgroundColor="#3366FF"
        TextColor="White"
        BorderColor="#3366FF"
        CornerRadius="5"
        Padding="15,10"
        Text="Run Chain">
            
        </Button>


        <!-- Input Frame -->
        <Frame Grid.Row="1" Grid.Column="0" BackgroundColor="#F0F4F8" Padding="0" HasShadow="False" BorderColor="#cccccc">
            <ScrollView VerticalScrollBarVisibility="Always">
                <VerticalStackLayout Spacing="15" Padding="20">
                    <Label Text="Input" FontSize="18" FontAttributes="Bold" TextColor="#5D5D5D"/>
                    <Label Text="Enter input data and 'Run Chain' to preview the output of your playground." FontSize="14" TextColor="#5D5D5D"/>

                    <Frame BackgroundColor="white" BorderColor="#cccccc" HeightRequest="400">
                        <ScrollView>
                            <Label Text="Btw what is being represented here should depend on the model being detected as first one in playground" FontSize="14" TextColor="#CCCCCC"/>
                        </ScrollView>
                    </Frame>
                </VerticalStackLayout>
            </ScrollView>
        </Frame>

        <!-- Output Frame -->
        <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="White" Padding="0" HasShadow="False" BorderColor="#cccccc">
            <ScrollView VerticalScrollBarVisibility="Always">
                <VerticalStackLayout Spacing="15" Padding="20">
                    <Label Text="Output" FontSize="18" FontAttributes="Bold" TextColor="#5D5D5D"/>
                    <Label Text="Preview output generated by your model chain." FontSize="14" TextColor="#5D5D5D"/>
                    <Frame BackgroundColor="white" BorderColor="#cccccc" HeightRequest="400">
                        <ScrollView>
                            <Label Text="Output will appear here" FontSize="14" TextColor="#CCCCCC"/>
                        </ScrollView>
                    </Frame>
                </VerticalStackLayout>
            </ScrollView>
        </Frame>
    </Grid>
</ContentPage>