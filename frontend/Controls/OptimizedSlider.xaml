<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="frontend.Controls.OptimizedSlider">
    <Grid RowDefinitions="Auto,Auto,Auto">
        <Grid ColumnDefinitions="*,*,*" Grid.Row="0">
            <Label x:Name="MinLabel" HorizontalOptions="Start" />
            <Label x:Name="OptimizedLabel" HorizontalOptions="Center" Grid.Column="1" />
            <Label x:Name="MaxLabel" HorizontalOptions="End" Grid.Column="2" />
        </Grid>
        <Slider x:Name="MainSlider" 
                Grid.Row="1"
                MinimumTrackColor="#3366FF"
                MaximumTrackColor="#CCCCCC"
                ThumbColor="#3366FF" />
        <Label x:Name="ValueLabel" 
               Grid.Row="2" 
               HorizontalOptions="Center" />
    </Grid>
</ContentView>