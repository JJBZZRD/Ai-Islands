<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="frontend.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:frontend.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="frontend">

	<FlyoutItem Title="Browse"
                Icon="search.png">
		<ShellContent
            Title="Browse"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage"
            Icon="dotnet_bot.png"/>
	</FlyoutItem>
	<FlyoutItem Title="Library"
            Icon="folder.png">
		<ShellContent
            Title="Library"
            ContentTemplate="{DataTemplate views:Library}"
            Route="MainPage" />
	</FlyoutItem>
	<FlyoutItem Title="Playground"
            Icon="mouse.png">
		<ShellContent
            Title="Setting"
            ContentTemplate="{DataTemplate views:Playground}"
            Route="MainPage"
            Icon="dotnet_bot.png"/>
	</FlyoutItem>
	<FlyoutItem Title="Setting"
            Icon="gear.png">
		<ShellContent
            Title="Setting"
            ContentTemplate="{DataTemplate views:Setting}"
            Route="MainPage"
            Icon="dotnet_bot.png"/>
	</FlyoutItem>

</Shell>
