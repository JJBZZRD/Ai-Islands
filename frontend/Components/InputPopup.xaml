<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="frontend.Components.InputPopup">
    <ContentView.Content>
        <Frame VerticalOptions="Center" HorizontalOptions="Center" BackgroundColor="White" Padding="20">
            <StackLayout>
                <Label x:Name="TitleLabel" FontSize="18" FontAttributes="Bold"/>
                <Entry x:Name="InputEntry" />
                <Button Text="Submit" Clicked="OnSubmitClicked"/>
                <Button Text="Cancel" Clicked="OnCancelClicked"/>
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>